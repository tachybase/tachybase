{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ES2020", "DOM"],
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "target": "ES2020",

    /* modules */
    "module": "ESNext",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",

    /* type checking */
    "allowJs": true,
    "noUnusedLocals": false,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true
  },
  "exclude": [
    "apps/**/node_modules",
    "apps/**/dist",
    "apps/**/public",
    "apps/build/bin",
    "apps/cli/**/*",
    "apps/**/lib",
    "apps/**/es",
    "packages/**/node_modules",
    "packages/**/dist",
    "packages/**/public",
    "packages/**/lib",
    "packages/**/es"
  ],
  "extends": "./tsconfig.paths.json",
  "include": ["packages/**/*", "apps/**/*", "playwright.config.ts", "vitest.config.mts"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
